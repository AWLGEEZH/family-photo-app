{
  "name": "family-photo-app",
  "version": "1.0.0",
  "description": "A secure family photo sharing application",
  "main": "server/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest",
    "test:client": "cd client && npm test",
    "lint": "eslint server/",
    "lint:client": "cd client && npm run lint",
    "start": "node server/index.js",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "deploy:setup": "node scripts/deploy-setup.js",
    "deploy:verify": "node scripts/verify-deployment.js",
    "generate:jwt": "node -e \"console.log('JWT_SECRET=' + require('crypto').randomBytes(32).toString('hex'))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "cloudinary": "^1.40.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "eslint": "^8.46.0"
  },
  "keywords": ["family", "photos", "sharing", "secure"],
  "author": "",
  "license": "MIT"
}